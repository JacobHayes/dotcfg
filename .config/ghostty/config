auto-update = download
mouse-hide-while-typing = true
quit-after-last-window-closed = true
theme = light:GruvboxLight, dark:GruvboxDarkHard
window-save-state = always

# NOTE: "Monaspace <Family>" includes Nerd Fonts icons, but they're scaled a bit too small. The "*
# Var" variants exclude them, allowing Ghostty to fall back to the full sized stock icons.
font-family = Monaspace Neon Var
# Enable ligatures: https://monaspace.githubnext.com/#code-ligatures
font-feature = "calt"
font-feature = "liga"
font-feature = "ss01"
font-feature = "ss02"
font-feature = "ss03"
font-feature = "ss04"
font-feature = "ss05"
font-feature = "ss06"
font-feature = "ss07"
font-feature = "ss08"
font-feature = "ss09"
font-feature = "ss10"

keybind = global:alt+grave_accent=toggle_quick_terminal
keybind = shift+enter=text:\n
# Swap the default to prefer splitting up/down
keybind = super+d=new_split:down
keybind = super+shift+d=new_split:right
# Remap split navigation to hjkl
keybind = ctrl+alt+h=goto_split:left
keybind = ctrl+alt+j=goto_split:down
keybind = ctrl+alt+k=goto_split:up
keybind = ctrl+alt+l=goto_split:right
